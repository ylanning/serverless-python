# Which python versionFROM python:3.12.8-slim# What code and docs# COPY local dir to container dirCOPY ./src /app/COPY requirements.txt /app/requirements.txtWORKDIR /app/# Default installsRUN apt-get update && \    apt-get install -y \    build-essential \    python3-dev \    python3-setuptools \    gcc \    make# Create virtual envRUN python3 -m venv /opt/venv && \    /opt/venv/bin/python -m pip install --upgrade && \    /opt/venv/bin/python -m pip install -r /app/requirements.txt \# Purge UnusedRUN apt-get remove -y --purge make gcc build-essential \    && apt-get autoremove -y \    && rm -rf /var/lib/apt/lists/*# Run the APPCMD ["./entrypoint.sh"]